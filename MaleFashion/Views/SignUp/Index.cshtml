@{
     Layout = "~/Views/Shared/_Layout_Blank.cshtml";
     ViewBag.Title = "Sign Up";
}
<!-- Sign-in begin -->
<section class="login p-fixed d-flex text-center bg-primary common-img-bg">
     <!-- Container-fluid starts -->
     <div class="container">
          <div class="row">
               <div class="col-sm-12">
                    <!-- Authentication card start -->
                    <div class="login-card card-block auth-body mr-auto ml-auto">
                         <form class="md-float-material">
                              <div class="text-center mb-5">
                                   <img src="~/Images/logo.png" alt="logo.png" />
                              </div>
                              <div class="auth-box">
                                   <div class="row">
                                        <div class="col-md-12">
                                             <h3 class="text-left txt-primary">Sign Up</h3>
                                        </div>
                                   </div>
                                   <hr />
                                   <div class="input-group mb-4">
                                        <input type="password" class="form-control" placeholder="First Name" />
                                        <span class="md-line"></span>
                                   </div>
                                   <div class="input-group mb-4">
                                        <input type="password" class="form-control" placeholder="Last Name" />
                                        <span class="md-line"></span>
                                   </div>
                                   <div class="input-group mb-4">
                                        <input type="email" class="form-control" placeholder="Your Email Address" />
                                        <span class="md-line"></span>
                                   </div>
                                   <div class="input-group mb-4">
                                        <input type="password" class="form-control" placeholder="Password" />
                                        <span class="md-line"></span>
                                   </div>
                                   <div class="input-group mb-4">
                                        <input type="password" class="form-control" placeholder="Confirm password" />
                                        <span class="md-line"></span>
                                   </div>
                                   <div class="row mt-3 mb-5 text-left">
                                        <div class="col-12 forgot-phone text-left">
                                             <a href="/SignIn" class="text-right f-w-600 text-inverse">
                                                  Already have an account?
                                             </a>
                                        </div>
                                   </div>
                                   <div class="row">
                                        <div class="col-md-12">
                                             <button type="button"
                                                     class="btn btn-primary btn-md btn-block waves-effect text-center">
                                                  Sign up
                                             </button>
                                        </div>
                                   </div>
                              </div>
                         </form>
                    </div>
               </div>
          </div>
     </div>
</section>
<!-- Sign-in end -->